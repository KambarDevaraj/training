<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <collectiontypes>
        <collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
        <collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true"
                        type="set"/>
    </collectiontypes>

    <enumtypes>
        <enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
            <value code="BLACK"/>
            <value code="BLUE"/>
            <value code="BROWN"/>
            <value code="GREEN"/>
            <value code="GREY"/>
            <value code="ORANGE"/>
            <value code="PINK"/>
            <value code="PURPLE"/>
            <value code="RED"/>
            <value code="SILVER"/>
            <value code="WHITE"/>
            <value code="YELLOW"/>
        </enumtype>
        <enumtype code="Laptops" generate="true" autocreate="true">
            <description>Laptop Information</description>
            <value code="HP"></value>
            <value code="LENOVO"></value>
            <value code="THINKPAD"></value>
        </enumtype>
        <enumtype code="Mobiles" generate="true" autocreate="true" dynamic="true">
            <description>Phone type</description>
            <value code="REDMI"/>
            <value code="SAMSUNG"/>
            <value code="LENOVO"/>
        </enumtype>
    </enumtypes>

    <relations>
        <relation code="Customer2AccountRelation" generate="true" localized="false" autocreate="true">
            <sourceElement type="Customer" qualifier="customer" cardinality="one">
                <modifiers read="true" write="true" search="true" optional="true" />
            </sourceElement>
            <targetElement type="Account" qualifier="accounts" cardinality="many">
                <modifiers read="true" write="true" search="true" optional="true" />
            </targetElement>
        </relation>

        <relation code="Customer2Order" generate="true" localized="false" autocreate="true">
            <sourceElement type="Customer" qualifier="customer" cardinality="one">
                <modifiers read="true" write="true" search="true" optional="true" />
            </sourceElement>
            <targetElement type="Order" qualifier="order" cardinality="many">
                <modifiers read="true" write="true" search="true" optional="true" />
            </targetElement>
        </relation>
    </relations>

    <itemtypes>

        <!-- Add your item definitions here -->


        <!-- TypeGroups are for structure of this file only -->

        <typegroup name="Apparel">
            <itemtype code="ApparelProduct" extends="Product"
                      autocreate="true" generate="true"
                      jaloclass="com.clavrit.training.core.jalo.ApparelProduct">
                <description>Base apparel product extension that contains additional attributes.</description>
                <attributes>
                    <attribute qualifier="genders" type="GenderList">
                        <description>List of genders that the ApparelProduct is designed for</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.clavrit.training.core.jalo.ApparelStyleVariantProduct">
                <description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
                <attributes>
                    <attribute qualifier="style" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color/Pattern of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="swatchColors" type="SwatchColorSet">
                        <description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>

            <itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.clavrit.training.core.jalo.ApparelSizeVariantProduct">
                <description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Electronics">
            <itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.clavrit.training.core.jalo.ElectronicsColorVariantProduct">
                <description>Electronics color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Email Process">
            <itemtype code="DiscountEmailProcess"
                      extends="StoreFrontCustomerProcess" autocreate="true" generate="true">
                <attributes>
                    <attribute type="AbstractOrder" qualifier="cart" >
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Solr Search">
            <itemtype code="Product" autocreate="false" generate="false">
                <attributes>
                    <attribute autocreate="true"
                               qualifier="customAttribute"
                               type="java.lang.String"
                               generate="true">
                        <persistence type="property" />
                        <modifiers read="true"
                                   write="true"
                                   search="true"
                                   initial="true"
                                   optional="true"
                                   unique="false" />
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="CustomItem" extends="GenericItem">
                <deployment table="CustomItem" typecode="10120"/>
                <attributes>
                    <attribute qualifier="customName" type="java.lang.String">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true"/>
                    </attribute>
                    <attribute qualifier="customCode" type="java.lang.String">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true"/>
                    </attribute>
                    <attribute qualifier="customDescription" type="java.lang.String">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true"/>
                    </attribute>
                    <!-- Add other attributes as needed -->
                </attributes>
            </itemtype>

            <itemtype code="Product" autocreate="false" generate="false">
                <attributes>
                    <attribute autocreate="true" qualifier="onlineDays" type="boolean"
                               generate="true">
                        <persistence type="property" />
                        <modifiers read="true" write="true" search="true"
                                   initial="true" unique="false" />
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="Product" autocreate="false" generate="false">
                <attributes>
                    <attribute autocreate="true" qualifier="newProduct" type="boolean"
                               generate="true">
                        <persistence type="property" />
                        <modifiers read="true" write="true" search="true"
                                   initial="true" unique="false" />
                    </attribute>
                    <attribute qualifier="languages" type="StringCollection">
                        <modifiers read="true" write="true" search="true" />
                        <persistence type="property" />
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Dont Otptimize">
            <itemtype code="MyFAQ" autocreate="true" generate="true">
                <deployment table="MyFAQs" typecode="10122" propertytable="MyFAQProps"/>
                <attributes>
                    <attribute qualifier="code" type="java.lang.String">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true"/>
                    </attribute>
                    <attribute qualifier="question" type="java.lang.String">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true" dontOptimize="true"/>
                    </attribute>
                    <attribute qualifier="answer" type="java.lang.String">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true" dontOptimize="true"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Enums">
            <itemtype code="TestEnum1" autocreate="true" generate="true">
                <deployment table="TestEnums" typecode="10127"/>
                <attributes>
                    <attribute qualifier="code" type="java.lang.String">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true"/>
                    </attribute>
                    <attribute qualifier="laptopType" type="Laptops">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true"/>
                    </attribute>
                    <attribute qualifier="mobileType" type="Mobiles">
                        <persistence type="property"/>
                        <modifiers read="true" write="true" search="true"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Interceptor">
            <itemtype code="MyCustomItem" autocreate="true" generate="true">
                <deployment table="MyCustomItems" typecode="10234"/>
                <attributes>
                    <attribute qualifier="status" type="java.lang.String">
                        <modifiers read="true" write="true" optional="true"/>
                    </attribute>
                    <attribute qualifier="createdDate" type="java.util.Date">
                        <modifiers read="true" write="true" optional="true"/>
                    </attribute>
                </attributes>
            </itemtype>

        </typegroup>

        <typegroup name="Filter">

            <itemtype code="Publisher" autocreate="true" generate="true">
                <deployment table="Publishers" typecode="10518" />
                <attributes>
                    <attribute qualifier="publisherID" type="java.lang.String">
                        <modifiers unique="true" read="true" write="true" search="true" optional="true"/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="name" type="java.lang.String">
                        <modifiers read="true" write="true" search="true" optional="true"/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="location" type="java.lang.String">
                        <modifiers read="true" write="true" search="true" optional="true"/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="contactEmail" type="java.lang.String">
                        <modifiers read="true" write="true" search="true" optional="true"/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="contactPhone" type="java.lang.Long">
                        <modifiers read="true" write="true" search="true" optional="true"/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="Customer" autocreate="false" generate="false">
                <attributes>
                    <attribute qualifier="prefferedStore" type="PointOfService">
                        <modifiers read="true" write="true" optional="true"/>
                    </attribute>
                    <attribute qualifier="newStore" type="BaseStore">
                        <modifiers read="true" write="true" optional="true"/>
                    </attribute>
                    <attribute qualifier="publisher" type="Publisher">
                        <modifiers read="true" write="true" search="true" optional="true"/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Relation">
            <itemtype code="Account" autocreate="true" generate="true">
                <deployment table="NewAccounts" typecode="10139"/>
                <attributes>
                    <attribute qualifier="accountNumber" type="java.lang.String">
                        <modifiers read="true" write="true" optional="true" unique="true" search="true"/>
                        <persistence type="property" >
                            <columntype>
                                <value>VARCHAR(10)</value>
                            </columntype>
                        </persistence>
                    </attribute>
                    <attribute qualifier="accountType" type="java.lang.String">
                        <modifiers read="true" write="true" optional="true" search="true"/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Occ Webservices">

            <itemtype code="Courses" autocreate="true" generate="true">
                <deployment table="CoursesDetails" typecode="15021"/>
                <attributes>
                    <attribute qualifier="courseCode" type="java.lang.String">
                        <modifiers unique="true" read="true" write="true" search="true"/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="courseName" type="localized:java.lang.String">
                        <modifiers  read="true" write="true" search="true" />
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="courseDuration" type="java.lang.String">
                        <modifiers  read="true" write="true" search="true"/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="courseAmount" type="java.lang.String">
                        <modifiers  read="true" write="true" search="true"/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

        </typegroup>


    </itemtypes>
</items>
